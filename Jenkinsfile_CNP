#!groovy

properties([
    [
        $class: 'GithubProjectProperty',
        displayName: 'Financial Remedy Document Generator Client',
        projectUrlStr: 'https://github.com/hmcts/finrem-document-generator-client.git'
    ],
    pipelineTriggers([
        [$class: 'GitHubPushTrigger']
    ])
])

@Library("Infrastructure")

def type = "java"
def product = "finrem"
def component = "dgcs"

def channel = '#finrem-dev'

def secrets = [
    'finrem-${env}'              : [
        secret("pdf-service-access-key", "PDF_SERVICE_ACCESS_KEY"),
        secret("idam-secret" ,"OAUTH2_CLIENT_FINREM"),
        secret("finrem-doc-s2s-auth-secret", "AUTH_PROVIDER_SERVICE_CLIENT_KEY")    ],
    (docmosisVaultName()): [
        secret("docmosis-api-key", "DOCMOSIS_ACCESS_KEY")
    ]
]

String docmosisVaultName() {
    println("Name of the environment again -----> " + env.PROD_SUBSCRIPTION_NAME)

    String vaultName = env.PROD_SUBSCRIPTION_NAME.toLowerCase() == 'prod' ? 'docmosisiaasprodkv' : 'docmosisiaasdevkv'
    return vaultName
}

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
    [ $class: 'AzureKeyVaultSecret',
      secretType: 'Secret',
      name: secretName,
      version: '',
      envVariable: envVar
    ]
}

withPipeline(type , product, component) {
    loadVaultSecrets(secrets)
    enableDockerBuild()
    enableDeployToAKS()

    after('checkout') {
        echo '${product}-${component} checked out'
    }

    enableSlackNotifications(channel)

    after('functionalTest:aat') {
        publishHTML target: [
            reportDir            : "target/site/serenity/",
            reportFiles          : "index.html",
            reportName           : "AAT Functional Tests",
            alwaysLinkToLastBuild: true
        ]
    }

}
